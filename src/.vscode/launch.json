    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/bin/www",
            "env": {
                "NODE_ENV":"development",
                "DEBUG":"src.*",
                "PORT":"3001"
            },
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "${workspaceFolder}/lib/**/*.js",
                "<node_internals>/**/*.js"
              ]
        }
    ]
}