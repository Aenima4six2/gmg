    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "program": "${workspaceFolder}/server/bin/www",
            "cwd": "${workspaceFolder}/server",
            "skipFiles": [
                "${workspaceRoot}/**/node_modules/**/*.js",
                "${workspaceRoot}/**/lib/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "src.*",
                "PORT": "3001"
            }
        }
    ]
}