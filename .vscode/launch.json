    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "App",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/app/react",            
            "runtimeArgs": [
                "run",
                "start"
            ],
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "program": "${workspaceFolder}/server/bin/www",
            "cwd": "${workspaceFolder}/server",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "src.*",
                "PORT": "3001"
            }
        }
    ]
}